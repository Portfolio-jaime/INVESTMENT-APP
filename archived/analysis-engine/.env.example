# Analysis Engine Service Configuration

# Service Settings
DEBUG=true
APP_NAME="TRII Analysis Engine"
APP_VERSION="1.0.0"

# API Configuration
API_V1_PREFIX=/api/v1

# Market Data Service URL (Docker)
MARKET_DATA_SERVICE_URL=http://market-data:8001

# For local development (outside Docker)
# MARKET_DATA_SERVICE_URL=http://localhost:8001

# Cache Settings
CACHE_TTL=300

# Technical Indicator Defaults
DEFAULT_SMA_PERIOD=20
DEFAULT_EMA_PERIOD=20
DEFAULT_RSI_PERIOD=14
DEFAULT_BOLLINGER_PERIOD=20
DEFAULT_BOLLINGER_STD=2.0

# MACD Parameters
MACD_FAST_PERIOD=12
MACD_SLOW_PERIOD=26
MACD_SIGNAL_PERIOD=9
